# Environment variables for compose-mcserver
# Copy this file to .env and set your actual values

# Oracle Cloud Infrastructure (OCI) credentials (if using Terraform)
OCI_TENANCY_OCID=your_oci_tenancy_ocid_here
OCI_USER_OCID=your_oci_user_ocid_here
OCI_FINGERPRINT=your_oci_fingerprint_here

# Git repository settings (for private repositories)
GIT_REPO_URL=git@github.com:yourusername/compose-mcserver.git
DEPLOY_KEY_PATH=/path/to/your/deploy/key

# Minecraft server settings
MINECRAFT_OPS=admin,player2,player3
MINECRAFT_WHITELIST=admin,player2,player3

# Optional: Custom environment overrides
MINECRAFT_MEMORY=4G
MINECRAFT_PORT=25565